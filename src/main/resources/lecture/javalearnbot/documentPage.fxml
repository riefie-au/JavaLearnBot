<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="20"
      prefWidth="900"
      prefHeight="700"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lecture.javalearnbot.DocumentsController">

    <padding>
        <Insets top="30" right="30" bottom="20" left="30"/>
    </padding>

    <!-- Title -->
    <Label text="Document Viewer">
        <font>
            <Font size="32"/>
        </font>
    </Label>

    <!-- Filters -->
    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints minWidth="150"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Search documents:" GridPane.rowIndex="0"/>
        <TextField fx:id="docSearchField"
                   promptText="Enter document name..."
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="0"/>

        <Label text="Filter by category:" GridPane.rowIndex="1"/>
        <ComboBox fx:id="categoryComboBox"
                  GridPane.columnIndex="1"
                  GridPane.rowIndex="1"/>

        <Label text="Filter by status:" GridPane.rowIndex="2"/>
        <ComboBox fx:id="statusComboBox"
                  GridPane.columnIndex="1"
                  GridPane.rowIndex="2"/>
    </GridPane>

    <Separator/>

    <!-- Documents Table -->
    <TableView fx:id="documentsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colName" text="Title" prefWidth="180"/>
            <TableColumn fx:id="colCategory" text="Category" prefWidth="120"/>
            <TableColumn fx:id="colSource" text="Source" prefWidth="120"/>
            <TableColumn fx:id="colPath" text="Path" prefWidth="220"/>
            <TableColumn fx:id="colTimestamp" text="Timestamp" prefWidth="140"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <Separator/>

    <!-- Preview -->
    <VBox spacing="10">
        <Label text="Document Preview">
            <font>
                <Font size="22"/>
            </font>
        </Label>
        <ListView fx:id="previewListView" prefHeight="150"/>
    </VBox>

</VBox>
