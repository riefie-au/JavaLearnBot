<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="700" prefWidth="900" spacing="20" style="-fx-background-color: #1b1b1d;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lecture.javalearnbot.Controllers.DocumentsController">

    <padding>
        <Insets bottom="20" left="30" right="30" top="30" />
    </padding>

    <Label text="Document Viewer" textFill="WHITE">
        <font>
            <Font size="32" />
        </font>
    </Label>

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints minWidth="150" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Search documents:" textFill="WHITE" GridPane.rowIndex="0" />
        <TextField fx:id="docSearchField" promptText="Enter document name..." GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Filter by category:" textFill="WHITE" GridPane.rowIndex="1" />
        <ComboBox fx:id="categoryComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Filter by status:" textFill="WHITE" GridPane.rowIndex="2" />
        <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <Separator />

    <TableView fx:id="documentsTable" prefHeight="201.0" prefWidth="839.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colName" prefWidth="180" text="Title" />
            <TableColumn fx:id="colCategory" prefWidth="120" text="Category" />
            <TableColumn fx:id="colSource" prefWidth="120" text="Source" />
            <TableColumn fx:id="colPath" prefWidth="220" text="Path" />
            <TableColumn fx:id="colTimestamp" prefWidth="140" text="Timestamp" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <Separator />

    <VBox spacing="10" VBox.vgrow="SOMETIMES">
        <Label text="Document Preview" textFill="WHITE">
            <font>
                <Font size="22" />
            </font>
        </Label>

        <ListView fx:id="previewListView" prefHeight="150.0" VBox.vgrow="ALWAYS" />
    </VBox>

</VBox>
